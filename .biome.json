{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useSemanticElements": "off",
        "useButtonType": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "off"
      },
      "suspicious": {
        "noConsoleLog": "warn"
      },
      "style": {
        "useNodejsImportProtocol": "off"
      }
    },
    "ignore": [
      "src/app/global.css",
      "**/node_modules/**",
      "**/.next/**",
      "**/dist/**",
      "src/app/layout.tsx"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "globals": ["React", "Testing"]
  }
}
